<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/AmarilloUsXXI">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/rectangulo2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:orientation="horizontal" />

                        <TextView
                            android:id="@+id/tv_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:gravity="center|center_vertical"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangulo"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="21dp"
                                android:layout_height="19dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                app:srcCompat="@android:drawable/ic_dialog_email" />

                            <TextView
                                android:id="@+id/tv_correo"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_weight="12"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="fill_vertical"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@drawable/rectangulo"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="21sp"
                                android:layout_height="19sp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                app:srcCompat="@android:drawable/picture_frame" />

                            <TextView
                                android:id="@+id/tv_roll"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_weight="12"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center_vertical"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangulo"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="21dp"
                                android:layout_height="19dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                app:srcCompat="@android:drawable/stat_sys_speakerphone" />

                            <TextView
                                android:id="@+id/tv_telefono"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_weight="12"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center_vertical"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangulo"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="21dp"
                                android:layout_height="19dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                app:srcCompat="@android:drawable/ic_popup_reminder" />

                            <TextView
                                android:id="@+id/tv_fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_weight="12"
                                android:fontFamily="sans-serif-condensed-light"
                                android:gravity="center_vertical"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/ovalo2"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <Button
                                android:id="@+id/button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:text="@string/cerrarsesion"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/iv_perfil"
                    android:layout_width="125dp"
                    android:layout_height="132dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/toro"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/AmarilloUsXXI"
                    app:civ_shadow_radius="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.462" />


                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/ic_baseline_settings_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.898"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_settings_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</FrameLayout>